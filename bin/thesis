#!/usr/bin/env ruby
require_relative '../config/environment'

def write_data(path,data)
  file = Rails.root.join("data").join(path)
  file.dirname.mkpath
  file.open("w") do |f|
    f.puts data.to_yaml
  end
end

# Root Certificates
write_data \
  "tex/root_certs/owners.yml",
  RootCertificates.new.by_owner.map{|o| o.to_h.deep_stringify_keys }

