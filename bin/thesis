#!/usr/bin/env ruby
require_relative '../config/environment'

def write_data(path,data)
  file = Rails.root.join("data").join(path)
  file.dirname.mkpath
  file.open("w") do |f|
    f.puts data.to_yaml
  end
end

# Root Certificates
roots = RootCertificates.new
%w( owners signatures_keys ).each do |key|
  write_data \
    "tex/root_certs/#{key}.yml",
    roots.send("by_#{key}").map{|o| o.to_h.deep_stringify_keys }
end

write_data \
  "tex/issuers/data.yml", Stats.issuers(20).map{|o| o.to_h.deep_stringify_keys }
