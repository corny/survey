%h1 Statistics

%h2 Total
%dl.dl-horizontal
  %dt Certificates
  %dd= Certificate.count

.row
  - %w( is_valid is_self_signed is_ca key_algorithm signature_algorithm ).each do |field|
    .col-md-6
      %h2= field.titleize
      %dl.dl-horizontal.with-charts.with-charts
        - Stats.certificate_field_count(field).each do |record|
          %dt= record[0]
          %dd= record[1]

